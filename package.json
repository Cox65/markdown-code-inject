{
  "name": "markdown-code-inject",
  "description": "A Github action which updates markdown files by injecting files content from repository",
  "version": "0.0.0",
  "author": "",
  "type": "commonjs",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cox65/markdown-code-inject.git"
  },
  "bugs": {
    "url": "https://github.com/Cox65/markdown-code-inject/issues"
  },
  "keywords": [
    "actions",
    "code",
    "markdown"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "glob": "^10.3.10",
    "tslib": "^2.6.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.7",
    "@types/node": "^20.6.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.11.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.50.0",
    "eslint-plugin-github": "^4.10.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
